<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_edittext">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_header_noti"
            android:paddingLeft="10dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:paddingTop="7dp"
            android:text="@string/button_exit_title"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnXacNhanCo"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/custom_edittext"
            android:text="@string/button_exit_yes"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnXacNhanKhong"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="119dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/custom_edittext"
            android:text="@string/button_exit_no"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>