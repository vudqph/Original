<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:paddingLeft="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBenhVien"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:scaleType="centerCrop"
                android:src="@drawable/hospital_item" />

            <ImageView
                android:id="@+id/imgRateStar"
                android:layout_width="80dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@id/imgBenhVien"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvTenBenhVien"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="Đây là test"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDiaDiemBV"
                android:layout_width="90dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Địa Điểm"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/imgChiDuongMapp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/icon_map" />

            <ImageView
                android:id="@+id/imgXemThonTinBV"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/icon_infor" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>