<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/bg_info_hospital_mo"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aicapnang"
        android:gravity="center"
        android:text="Thông Tin Bệnh Viện"
        android:textColor="#977559"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:fontFamily="@font/font_uvn_3"
            android:text="Tên Bệnh Viện: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvTTTenBV"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp"
            android:fontFamily="@font/font_uvn_3"

            android:maxLines="1"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_marginLeft="5dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="@font/font_uvn_3"
            android:text="Địa Chỉ: "

            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvTTDiaDiemBV"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/font_uvn_3"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:fontFamily="@font/font_uvn_3"
            android:text="Dịch Vụ: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvTTDichVuBV"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp"
            android:fontFamily="@font/font_uvn_3"
            android:text=""
            android:textColor="#000000" />

    </LinearLayout>

    <Button
        android:id="@+id/btnThoatTT"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:text="Thoát"
        android:background="@drawable/custom_edittext"/>
</LinearLayout>