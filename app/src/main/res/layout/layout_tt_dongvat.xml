<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/bg_info"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_info_pet_title"
        android:textSize="30dp"
        android:fontFamily="@font/aicapnang"
        android:gravity="center"
        android:textColor="#977559"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView

            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:text="@string/title_info_pet_name"
            android:textColor="#000000"
            android:fontFamily="@font/font_uvn_2"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTTThuCung"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView

            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/title_info_pet_feature"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:fontFamily="@font/font_uvn_2"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTTDacDiemThuCung"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView

            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/font_uvn_2"
            android:text="@string/title_info_pet_species"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView

            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:fontFamily="@font/font_uvn_2"
            android:text="@string/title_info_pet_image"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>